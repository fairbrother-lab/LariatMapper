{
	"version": 1,
	"formatters": {
	  "simple": {
		"format": "{asctime} | {message}",
		"datefmt": "%d/%b/%Y %H:%M:%S",
		"style": "{"
	  },
	  "extensive":{
		"format": "{asctime} | {filename:^21} | {lineno:<3} | {message}",
		"datefmt": "%d/%b/%Y %H:%M:%S",
		"style": "{"
	  }
	},
	"loggers": {
		"debug": {
			"level": "DEBUG",
			"handlers": [ "extensive" ]
		},
		"info": {
			"level": "INFO",
			"handlers": [ "simple" ]
			},
		"warning": {
			"level": "WARNING",
			"handlers": [ "simple" ]
			},
		"error": {
			"level": "ERROR",
			"handlers": [ "simple" ]
		}
	}
  }