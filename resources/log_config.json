{
	"version": 1,
	"formatters": {
		"extensive":{
			"format": "{asctime} | {filename:^21} | {lineno:<3} | {message}",
			"datefmt": "%d/%b/%Y %H:%M:%S",
			"style": "{"
		},
		"simple": {
		  "format": "{asctime} | {message}",
		  "datefmt": "%d/%b/%Y %H:%M:%S",
		  "style": "{"
		}
	},
	"filters": {
		"append_warn_err": {
			"()": "LariatMapper.scripts.utils.AppendWarnErr"
		}
	},
	"handlers": {
		"extensive": {
			"formatter": "extensive",
			"class": "logging.StreamHandler",
			"stream": "ext://sys.stdout",
			"filters": ["append_warn_err"]
		},
		"simple": {
			"formatter": "simple",
			"class": "logging.StreamHandler",
			"stream": "ext://sys.stdout",
			"filters": ["append_warn_err"]
		}
	},
	"loggers": {
		"debug": {
			"level": "DEBUG",
			"handlers": [ "extensive" ]
		},
		"info": {
			"level": "INFO",
			"handlers": [ "simple" ]
			},
		"warning": {
			"level": "WARNING",
			"handlers": [ "simple" ]
			},
		"error": {
			"level": "ERROR",
			"handlers": [ "simple" ]
		}
	}
  }